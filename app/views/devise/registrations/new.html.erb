<div class= "container">

  <h3>新規会員登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="field">
        <%= f.label :名前 %><br />
        <%= f.label :（姓） %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "email", placeholder: "令和" %>
        <!--, placeholder: "sample@example.com"フォーム内に例文の追加-->
        <%= f.label :（名） %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "email", placeholder: "道子" %>
      </div>

    　<div class="field">
        <%= f.label :フリガナ %><br />
        <%= f.label :（セイ） %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email", placeholder: "レイワ" %>
        <%= f.label :（メイ） %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email", placeholder: "ミチコ" %>
      </div>


      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>

      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %><br />
        <%= f.text_field :post_code, autofocus: true, placeholder: "0000000" %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神薗町0-0" %>
      </div>

      <div class="field">
        <%= f.label :電話番号（ハイフンなし） %><br />
        <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（6文字以上） %>
        <% if @minimum_password_length %>

        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>


    　<p>既に登録済みの方</p>
      <div><%= link_to "こちら", new_customer_session_path %>　<span>からログインしてください。</span>  </div>
  </div>




</div>
