<div class = "container">
  <div class = "row">

    <div class='col-md-8 offset-md-4'>
      <h2>ジャンル編集</h2>
    </div>

<%= form_with model:@genre, url:admins_genre_path(@genre), local: true do |f| %>

　　　<div class="form-group row">
　　　  <%= f.label :ジャンル名 %>
　　　  <%= f.text_field :genre_name, placeholder: "ジャンル名", class:"form-control w-25" %>
　　　</div>
　　　<div class="form-group-row">
　　　  <%= f.submit '変更を保存', class: "btn btn-success" %>
　　　</div>
<% end %>

　　</div>
　</div>