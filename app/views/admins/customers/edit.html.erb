<div class= "container">
 <div class="col-3 text-center p-3 mb-2 bg-light text-dark">
    <h5>
       <%= @customer.last_name %>
 	   <%= @customer.first_name %>
       さんの会員情報編集
    </h5>
 </div>
</div>

<div class= "container">
 <div class="row">

   <%= form_with model:@customer, url: admins_customer_path(@customer), local:true do |f| %>

   <div class="form-group">
      <%= f.label :会員id %>
      <%= f.label @customer.id %>
   </div>

   <div class="form-group">
      <%= f.label :氏名 %>
      <%= f.text_field :last_name, class: "form-control" %>
      <%= f.text_field :first_name, class: "form-control" %>
   </div>

    <div class="form-group">
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana, class: "form-control" %>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>

   <div class="form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_field :post_code, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :phone_number, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: "form-control" %>
   </div>

   <div>
      <%= f.label :会員ステータス %>
    <div class="form-check">
      <%= f.radio_button :is_enabled, :true %>
      <%= f.label :is_enabled, "有効" %>
      <%= f.radio_button :is_enabled, :false %>
      <%= f.label :is_enabled, "退会" %>
    </div>
   </div>

      <%= f.submit "変更を保存", class: "btn btn-primary col-1" %>

    <% end %>

 </div>
</div>