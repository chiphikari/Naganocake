
<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center p-3 mb-2 bg-light text-dark">会員情報編集</h5>
  </div>
</div>

<div class= "container">
  <div class="row">
    <%= form_with model: @customer, local:true do |f| %>
      <div class= "form-group">
        <label>氏名</label>
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %><%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <div class= "form-group">
        <label>フリガナ</label>
        <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
      </div>
      <div class= "form-group">
        <label>郵便番号</label>
        <%= f.text_field :post_code, autofocus: true, class: "form-control" %>
      </div>
      <div class= "form-group">
        <label>電話番号</label>
        <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
      </div>
      <div class= "form-group">
        <label>メールアドレス</label>
        <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>

    </div>

</div>
