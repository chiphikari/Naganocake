<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">

      <li class="LOGO">
       <%= link_to root_path do %>
       <i class="fas fa-birthday-cake"></i>
       <% end %>
      </li>

      <div class="collapse navbar-collapse" id="navbarNavDropdown"></div>
      <ul class="navbar-nav ml-auto">
      <% if customer_signed_in? %>

        <li class= mypage>
         <button class="btn btn-default"> <%= link_to "マイページ", customers_path %></button>
        </li>

       <li class= items>
        <button class="btn btn-default"><%= link_to "商品一覧", items_path %></button>
        </li>

         <li class=cart>
        <button class="btn btn-default"><%= link_to "カート", cart_items_path %></button>
        </li>

        <li class=logout>
          <button class="btn btn-default"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></button>
        </li>

      <% elsif admin_signed_in? %>
        <li class= items>
          <button class="btn btn-default"><%= link_to '商品一覧', admins_items_path %></button>
        </li>

        <li class= customers>
          <button class="btn btn-default"><%= link_to '会員一覧', admins_customers_path %></button>
        </li>

        <li class=orders>
          <button class="btn btn-default"><%= link_to '注文履歴一覧', admins_path %></button>
        </li>

        <li class=genres>
          <button class="btn btn-default"><%= link_to 'ジャンル一覧', admins_genres_path %></button>
        </li>

        <li class=logout>
          <button class="btn btn-default"><%= link_to "ログアウト",destroy_admin_session_path, method: :delete %></button>
        </li>
      <% else %>
        <li class=about>
          <button class="btn btn-default"><%= link_to "About", homes_about_path %></button>
        </li>

         <li class= items>
           <button class="btn btn-default"><%= link_to "商品一覧", items_path %></button>
        </li>


        <li calss=signup>
          <button class="btn btn-default"><%= link_to "新規登録", new_customer_registration_path %></button>
        </li>

        <li class=login>
         <button class="btn btn-default"><%= link_to "ログイン", new_customer_session_path %></button>
        </li>
      <% end %>

    </ul>
    </div>
    </nav>
    </header>
    <%= notice %>
    <%= yield %>
  </body>

  </html>