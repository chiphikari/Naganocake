<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center p-3 mb-2 bg-light text-dark">マイページ</h5>
  </div>
</div>

<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-1 font-weight-bold">登録情報</h5>
    <%= link_to "編集する", edit_customers_path, class: "col-1 btn btn-success" %>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <div class= "col-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class= "col-4">氏名</th>
            <td class= "col-8"><%= current_customer.last_name %> <%= current_customer.first_name %></td>
          </tr>
          </tr>
          <tr>
            <th class= "col-4">カナ</th>
            <td class= "col-12"><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class= "col-4">郵便番号</th>
            <td class= "col-12"><%= current_customer.post_code %></td>
          </tr>
          <tr>
            <th class= "col-4">住所</th>
            <td class= "col-12"><%= current_customer.address %></td>
          </tr>
          <tr>
            <th class= "col-4">電話番号</th>
            <td class= "col-12"><%= current_customer.phone_number %></td>
          </tr>
          <tr>
            <th class= "col-4">メールアドレス</th>
            <td class= "col-12"><%= current_customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

