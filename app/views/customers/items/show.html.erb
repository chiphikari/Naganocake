<% if @cart_item.errors.any? %>
    <ul>
      <% @cart_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
<% end %>

<div class= " container ">
  <div class= " row ">
    <div class= "col"><%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "noimage.jpg", size: "300x300" %></div>
      <div class= " col ">
        <h5><%= @item.item %></h5>
        <p><%= @item.item_explanation %></p>
        <%= number_to_currency(@item.price, unit: "¥", format: "%u %n" ) %>
        <%= form_with model:@cart_item, url: cart_items_path, local:true do |f| %>
          <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.submit "カートに入れる", class: "btn btn-secondary" %>
        <% end %>
      </div>
  </div>
</div>