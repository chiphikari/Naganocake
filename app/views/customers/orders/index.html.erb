

  <div class="row">
      <h2>注文履歴一覧</h2>
      <div class="col-xs-10 col-xs-offset-1"style="margin-top: 50px;">
        <table class="table">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">注文日</th>
              <th scope="col">配送先</th>
              <th scope="col">注文商品</th>
              <th scope="col">注文支払金額</th>
              <th scope="col">ステータス</th>
              <th scope="col">注文詳細</th>
            </tr>
          </thead>
              <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
            <!-- .strftime => created_atの表記を設定 -->
            <td><%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %></td>
            <td> <% order.order_items.each do |f| %>
                <%= f.item %><br>
                <% end %></td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status %></td>
            <td class="col-1 px-0"><%= link_to "編集する", order_path(order), class:"btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
        </table>

      </div>