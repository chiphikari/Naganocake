<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center p-3 mb-2 bg-light text-dark">注文履歴詳細</h5>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <div class= "d-flex">
      <div class= "col">
        <p class="font-weight-bold">注文情報</p>
        <table class="order-table table table-bordered">
          <tbody>
            <tr>
              <th style="width: 30%">注文日</th>
              <td><%= @order.updated_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th style="width: 30%">配送先</th>
              <td><%= @order.address %></td>
            </tr>
            <tr>
              <th style="width: 30%">支払い方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th style="width: 30%">ステータス</th>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class= "col offset-1">
        <p class="font-weight-bold">請求情報</p>
        <table class="order-table table table-bordered">
          <tbody>
            <tr>
              <th style="width: 30%">商品合計</th>
              <td><%= @order.total_payment.round.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th style="width: 30%">配送料</th>
              <td><%= @order.postage.round.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th style="width: 30%">ご請求額</th>
              <td class="font-weight-bold"><%= (@order.total_payment += @order.postage).round.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <p class="font-weight-bold">注文内容</p>
    <table class="table table-bordered" style="width:1000px;">
      <%= render 'customers/orders/content_order', cart_items: @cart_items %>
    </table>