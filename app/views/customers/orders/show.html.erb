<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center design">注文履歴詳細</h5>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <div class= "d-flex">
      <div class= "col">
        <p class="px-3 col-2" style= "color: #364e96; padding: 0.5em 0; border-top: solid 3px #364e96; border-bottom: solid 3px #364e96;">注文情報</p>
        <table class="order-table table table-bordered">
          <tbody>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">注文日</th>
              <td><%= @order.updated_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">配送先</th>
              <td>
                <%= @order.address %><br />
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">支払い方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">ステータス</th>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class= "col offset-1">
        <p class="px-3 col-2" style= "color: #364e96; padding: 0.5em 0; border-top: solid 3px #364e96; border-bottom: solid 3px #364e96;">請求情報</p>
        <table class="order-table table table-bordered">
          <tbody>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">商品合計</th>
              <td><%= @sum.round.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">配送料</th>
              <td><%= @order.postage.round.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th style="width: 30%; background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">ご請求額</th>
              <td class="font-weight-bold"><%= @order.total_payment.round.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <p class="px-3" style= "color: #364e96; padding: 0.5em 0; border-top: solid 3px #364e96; border-bottom: solid 3px #364e96;">注文内容</p>
    <table class="table table-bordered">
      <thead style="background-image: linear-gradient(-45deg, #C6E6FB 15%, #fff 15%, #fff 25%, #C6E6FB 25%, #C6E6FB 65%, #fff 65%, #fff 75%, #C6E6FB 75%, #C6E6FB">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.item.item %></td>
            <% item_price= order.item.price*1.1 %>
            <td><%= item_price.round.to_s(:delimited)%></td>
            <td><%= order.quantity.round %></td>
            <td><%= (item_price * order.quantity).round.to_s(:delimited) %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>