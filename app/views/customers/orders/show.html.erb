<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center p-3 mb-2 bg-light text-dark">注文情報</h5>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <div class= "d-flex">
      <p class="font-weight-bold">注文情報</p>
      <table class="offset-1 table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.update_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.statuses_i18n.invert %></td>
          </tr>
        </tbody>
      </table>

      <p class="font-weight-bold">請求情報</p>
      <table class="offset-1 table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_payment %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td class="font-weight-bold"><%= @order.total_payment += @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <p class="font-weight-bold">注文内容</p>
    <table class="offset-1 table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td><%= cart_item.item.item %></td>
            <% icom_price= cart_item.item.price*1.1 %>
            <td><%= icom_price.to_s(:delimited)%></td>
            <td><%= cart_item.quantity %></td>
            <td><%= cart_item.cart_items_price %></td>
          </tr>
        </tbody>
      <% end %>
    </table>