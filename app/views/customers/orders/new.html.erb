<div class="container">
  <div class="row">
    <div class="offset-1">
      <%= flash[:order_new] %>
      <h3 class="col-3 text-center p-3 mb-2 bg-light text-dark">注文情報入力</h3>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-2 col-5">

<!-- 支払先 -->
      <div class="row">
        <strong class="px-3">支払方法</strong>
      </div>

      <%= form_with model:@order, url: confirm_orders_path, method: :post, local:true do |f| %>
        <div class="form-check mt-3">
          <%= f.radio_button :payment_method, :クレジットカード %>
          <%= label_tag :payment_method, "クレジットカード", {value: :"クレジットカード", style: "display: inline-block;"} %><br>
          <%= f.radio_button :payment_method, :銀行振込 %>
          <%= label_tag :payment_method, "銀行振込", {value: :"銀行振込", style: "display: inline-block;"} %>
        </div>

<!-- 支払先 -->

<!-- お届け先 -->
        <div class="row mt-3">
          <strong class="px-3">お届け先</strong>
        </div>

        <div class="form-check mt-3">
          <% address = current_customer.post_code + current_customer.address + current_customer.last_name + current_customer.first_name %>
          <%= f.radio_button :select, 1 %>
          <%= label_tag :select, "ご自身の住所",{value: :my_address, style: "display: inline-block;"} %><br>
          <%= address %><br>
          <%= f.radio_button :select, 2 %>
          登録住所から選択<br>

         <%= f.collection_select :address_id, @addresses, :id, :name, prompt:  @order.postal_code, class:"form-control form-control-sm col-lg-5" %>
        </div>
        <!-- お届け先 -->


        <!-- 新しいお届け先 -->
      <div class="row mt-5">
        <span class="d-flex">
           <%= f.radio_button :select, 3 %><p>新しいお届け先</p>
        </span>
      </div>



        <div class="d-flex form-group">
          <span class= "col-3 p-1"><%= f.label :郵便番号（ハイフンなし） %></span>
          <%= f.text_field :postal_code, placeholder: "郵便番号", class: "form-control offset-1 col-10" %>
        </div>

        <div class="d-flex form-group">
          <span class= "col-3 p-2"><%= f.label :住所 %></span>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control offset-1 col-10" %>
        </div>

        <div class="d-flex form-group">
          <span class= "col-3 p-2"><%= f.label :宛名 %></span>
          <%= f.text_field :name, placeholder:"令和道子", class: "form-control offset-1 col-5" %>
        </div>
<!-- 新しいお届け先 -->

        <div class="row">
          <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
        </div>


    </div>
      <% end %>



    </div>


</div>