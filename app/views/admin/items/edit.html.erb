<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center p-3 mb-2 bg-light text-darke">商品編集</h5>
  </div>
</div>

<div class= "container ">
  <div class= "row py-3">
    <div class= "mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <%= form_with model:@item, url: admin_item(@item.id), local:true do |f| %>

        <div class= "form-group">
          <label>商品画像</label>
          <%= f.attachment_field :image, placeholder: "商品画像" %>
        </div>

        <div class= "form-group">
          <label>商品名</label>
          <%= f.text_field :item, autofocus: true, placeholder:"商品名", class: "form-control"%>
        </div>

        <div class= "form-group">
          <label>商品説明</label>
          <%= f.text_area :item_explanation, autofocus: true, placeholder:"ここに説明文を記述します", class: "form-control" %>
        </div>

        <div>ジャンル</div>

        <div class= "form-group">
          <label class="inputIntroduction">Introduction</label>
          <%= f.text_field :price, autofocus: true, class: "form-control" %>
        </div>

        <div>販売ステータス</div>
      <% end %>
    </div>
  </div>
</div>